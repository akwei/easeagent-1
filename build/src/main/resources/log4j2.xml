<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Http name="post-requests" uri="https://gateway.easeapm.com:10443/v1/requests" contentType="application/json" userAgent="easeagent/0.1.0"/>
        <Http name="post-metrics" uri="https://gateway.easeapm.com:10443/v1/metrics" contentType="application/json" userAgent="easeagent/0.1.0"/>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%10.10t] %-p %10.10c{1} - %msg%n"/>
        </Console>
        <Failover name="requests" primary="post-requests">
            <Failovers>
                <AppenderRef ref="Console"/>
            </Failovers>
        </Failover>
        <Failover name="metrics" primary="post-metrics">
            <Failovers>
                <AppenderRef ref="Console"/>
            </Failovers>
        </Failover>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="metrics" level="info" additivity="false">
            <AppenderRef ref="metrics"/>
        </Logger>
        <Logger name="requests" level="info" additivity="false">
            <AppenderRef ref="requests"/>
        </Logger>
    </Loggers>
</Configuration>